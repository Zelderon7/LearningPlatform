@using WebApplication1.Models.Entities.CodingFiles
@model IEnumerable<CodingTask>

@{
    ViewData["Title"] = "Discover";
    List<TaskTemplate> templates = ViewBag.Templates;
}

<!-- //Admin options -->
@if (User.IsInRole("ADMIN") || User.IsInRole("TEACHER"))
{
    <div style="display: flex; gap: 5px;">
        <a class="btn btn-success" asp-action="Create" asp-controller="CodingChallenges">Create</a>
        @if (User.IsInRole("ADMIN"))
        {
            <a class="btn btn-primary" style="margin-left: 10px;" asp-action="CreateTemplate" asp-controller="CodingChallenges">Create Template</a>
            <select class="btn btn-primary" style="margin-left: auto; margin-right: 10px; width: fit-content" id="templateDropdown">
                <option disabled selected>Edit Template</option>
                @foreach (var template in templates)
                {
                    <option value="@template.Id">@template.Name</option>
                }
            </select>
        }
        

	</div>
}

@if(Model.Count() == 0){
    <h2>No challenges yet :(</h2>
}

<div class="container-fluid" style="display: flex !important; gap: 20px; margin-top: 30px; margin-left: 20px;">

    @foreach (var item in Model)
    {
        <div class="card" style="width: 18rem;">
            @if (item.ImageUrl != null)
            {
                <img class="card-img-top" src="@item.ImageUrl" alt="Card image cap">
            }
            else
            {
                <img class="card-img-top" src="https://placehold.co/286x180" alt="Card image cap">
            }
            <div class="card-body" style="padding-bottom: 10px;">
                <h5 class="card-title mb-3">@item.Name</h5>
                <p class="card-text mb-0">@(item.Description.Length < 20? item.Description : item.Description.Substring(0, 20) + "...")</p>
                <div style="display: flex; justify-content:space-between; align-items: center;">
                    <p class="card-text" style="color: deepskyblue">@item.Language</p>
                    <form asp-action="OpenChallenge" method="get" style="margin: 0;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-primary">Solve</button>
                    </form>
                </div>
            </div>
        </div>
    }

</div>


<script>
    document.getElementById("templateDropdown").addEventListener("change", function () {
        var selectedTemplateId = this.value;

        if (selectedTemplateId) {
            window.location.href = "/CodingChallenges/OpenTemplate?id=" + selectedTemplateId;
            this.selectedIndex = 0; // Reset dropdown to default option
        }
    });

</script>
